
@import url('http://fonts.googleapis.com/css?family=Droid+Serif');

body
	background-color #FBFBFB
	color #151612
	font-family 'Droid Serif', serif
	margin 0

h1
	font-size 2rem
h2
	font-size 1.5rem
h1,h2
	font-weight bold
	

figure
	margin 2rem 0
figcaption
	color #353730
	font-size 0.9rem
	text-align center

img
	max-width 100%

span:empty
	display none

.section
	margin auto
	max-width 80em
	padding 0 1.5rem
	h1
		font-size 2rem
		display block
		border-bottom solid 2px #515151
		margin 2em 0 0 0
	h2
		font-size 1.5rem
	ol li,
	ul li
		margin 0 0 0 1em
		padding 0 0 0 1em

.note
	color: #774C14
	background-color #E4DE64
	border-radius 0.5em
	position relative
	padding 0.5rem 1.5rem
	max-width 75rem
	margin 2em 0
	&:before
		color #CBC444
		content 'NOTE'
		font-weight bold
		position absolute
		top -0.9em
		z-index -1
	&.visit
		background-color #E0C2E6
		color #5F3F60
		&:before
			color #D0B1D7
			content 'VISIT'
	&.tip
		background-color #B7E0E7
		color #2B637E
		&:before
			color #6CB0BC
			content 'TIP'

.question,
.exercises
	border-radius 0.5em
	position relative
	padding 0.5rem 1.5rem
	max-width 75rem
	margin 2em 0
	background-color #D8D8D8
	&:before
		font-weight bold
		position absolute
		top -0.9em
		z-index -1
		color #C2C2C2
		content 'SOLVE'

.workstep
	margin 0 0 0 1em
	h2
		font-size 1rem
		text-align center

#index
	background-color #EBEFE9
	display inline-block
	margin-left 4rem
	padding 1.5rem
	li
		font-size 0.9rem
		margin-bottom 0.2em


@media screen and (max-width: 44.99em)
	.section
		padding 0.7rem

@media screen and (min-width: 45em) and (max-width: 71.99em)
	body
		width 100%
	

@media screen and (min-width: 72em)
	body
		width 100%